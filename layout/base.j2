<!DOCTYPE html>
<html lang="en">
    <head>
        {% block starthead %}{% endblock starthead %}
        <meta charset="{{ resource.meta.charset }}">

        <title>Do what you love</title>
        <meta name="description" content="I specialize in creative, individualized wish-I'd-thought-of-that design solutions for creative entreprenuers who are ready to share their passion with the world.">
        <meta name="author" content="{{ resource.meta.author }}">

        <meta name="viewport" content="{{ resource.meta.viewport }}">

        {% block favicons %}
        <link rel="shortcut icon" href="{{ media_url('/favicon.ico') }}">
        {% endblock favicons %}

        {% block css %}
        <link rel="stylesheet" href="{{ media_url('css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ media_url('css/font-awesome.css') }}">
        <link rel="stylesheet" href="{{ media_url('css/main.css') }}">
        {% endblock css %}

        {% block headjs %}
        <script type="text/javascript" src="//use.typekit.net/miw4xkh.js"></script>
        <script type="text/javascript">try{Typekit.load();}catch(e){}</script>
        {% endblock headjs %}

        {% block analytics %}
        {% include "analytics.j2" %}
        {% endblock analytics %}

        {% block endhead %}{% endblock endhead %}
    </head>
    <body id="{{ resource.meta.id if resource.meta.id else resource.slug }}">
        {% block content %}
        <div class="container">
            {% block container %}
            <div id="main" role="main">
                <header>
                    {% block nav %}
                    <div class="top-menu row">
                        <!--<div class="span12 visible-phone"><a href="#"><img src="{{ media_url('img/oneandonlylogo.png') }}"></a></div>-->
                        <div class="span4">
                            <ul class="top-menu-left">
                                <li><a href="{{ content_url('gettingmarried') }}">Weddings</a></li>
                                <li><a href="{{ content_url('pricing') }}">Work with me</a></li>
                            </ul>
                        </div>
                        <div class="span4">
                            <a href="/"><img src="{{ media_url('img/oneandonlylogo.png') }}"></a>
                        </div>
                        <div class="span4">
                            <ul class="top-menu-right">
                                <li><a href="{{ content_url('work') }}">Work</a></li>
                                <li><a href="/blog">Blog</a></li>
                                <li><a href="{{ content_url('contact') }}">About</a></li>
                            </ul>
                        </div>
                    </div>
                    {% endblock %}
                </header>
                <section class="content">
                    {% block main %}
                    {% endblock main %}
                </section>
                {% block footer %}
                <footer>
                    <ul class="bottom-menu">
                        <li>Site Design by One & Only</li>
                        <li><a href="mailto:alison@oneandonly.im">alison@oneandonly.im</a></li>
                        <li class="menu-social"><a href="https://twitter.com/thealisoncitron" title="Twitter" class="icon-twitter" target="_blank"></a></li>
                        <li class="menu-social"><a href="http://instagram.com/thealisoncitron" title="Instagram" class="icon-camera" target="_blank"></a></li>
                        <li class="menu-social"><a href="http://pinterest.com/thealisoncitron" title="Pinterest" class="icon-pinterest" target="_blank"></a></li>
                    </ul>
                </footer>
                {% endblock footer%}
            </div>
            {% endblock container %}
        </div> <!--! end of #container -->
        {% endblock content%}
        {% block js %}
        <script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
        <!--<script type="text/javascript" src="http://twitter.github.com/bootstrap/assets/js/bootstrap.js"></script>-->
        <script type="text/javascript" src="{{ media_url('js/main.js') }}"></script>
        {% block scripts %}
        {% endblock scripts %}

        {% endblock js %}
    </body>
</html>
